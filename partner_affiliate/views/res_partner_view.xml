<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_res_partner_tree_contact" model="ir.ui.view">
        <field name="name">res.partner.tree.contact</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree" />
        <field name="arch" type="xml">
            <field name="phone" position="before">
                <field name="type" widget="badge"
                    decoration-warning="type == 'affiliate'" 
                    decoration-danger="type == 'parent_company'" 
                    decoration-info="type == 'contact'"
                    decoration-mutes="type == 'other'"/>
            </field>
            <field name="type" position="after">
                <field name="vat" />
            </field>
        </field>
    </record>


    <!-- Show always parent_id plus add affiliates -->
    <record id="view_partner_form_add_affiliate" model="ir.ui.view">
        <field name="name">res.partner.form</field>
        <field name="model">res.partner</field>
        <field eval="1" name="priority" />
        <field name="inherit_id" ref="chiarcosso_base.chiarcosso_base_partner_form" />
        <field name="arch" type="xml">
            <field name="company_type" position="before">
                <group>
                    <field name="type" attrs="{'invisible': False}" />
                </group>
            </field>
            <field name="name" position="after">
                <group>
                    <field name="parent_id" position="move" />
                </group>
			</field>
            <field name="parent_id" position="attributes">
                <attribute name="attrs">{'readonly': False}</attribute>
            </field>
            <field name="parent_id" />
            <xpath expr="/form/sheet//group/group/field[@name='vat']" position="attributes">
                <attribute name="attrs">{'readonly': [('type', '!=', 'parent_company')]}</attribute>
            </xpath>
            <xpath expr="/form/sheet//group/group/field[@name='name']" position="attributes">
                <attribute name="attrs">{'readonly': [('type', '=', 'affiliate')]}</attribute>
            </xpath>
            <xpath expr='//page[@name="internal_notes"]' position="before">
                <page string="Affiliates" attrs="{'invisible': [('type','!=','parent_company')]}">
                    <field name="affiliate_ids"
                           context="{'default_parent_id': active_id, 'default_is_company': True}"
                           mode="kanban">
                        <kanban>
                            <field name="color" />
                            <field name="name" />
                            <field name="title" />
                            <field name="email" />
                            <field name="parent_id" />
                            <field name="is_company" />
                            <field name="function" />
                            <field name="phone" />
                            <field name="street" />
                            <field name="street2" />
                            <field name="zip" />
                            <field name="city" />
                            <field name="country_id" />
                            <field name="mobile" />
                            <field name="state_id" />
                            <field name="image_512" />
                            <field name="lang" />
                            <templates>
                                <t t-name="kanban-box">
                                    <t t-set="color" t-value="kanban_color(record.color.raw_value)" />
                                    <div t-att-class="color + (record.title.raw_value == 1 ? ' oe_kanban_color_alert' : '') + ' oe_kanban_global_click'">
                                        <a t-if="!read_only_mode" type="delete" class="fa fa-times pull-right"></a>
                                        <div class="o_kanban_image">
                                            <img t-if="record.image_512.raw_value" t-att-src="'data:image/png;base64,'+record.image_512.raw_value" />
                                            <t t-if="!record.image_512.raw_value">
                                                <img t-if="record.type.raw_value === 'delivery'" t-att-src='_s + "/base/static/src/img/truck.png"' />
                                                <img t-if="record.type.raw_value === 'invoice'" t-att-src='_s + "/base/static/src/img/money.png"' />
                                                <t t-if="record.type.raw_value !== 'invoice' &amp;&amp; record.type.raw_value !== 'delivery'">
                                                    <img t-if="record.is_company.raw_value === true" t-att-src='_s + "/base/static/src/img/company_image.png"' />
                                                    <img t-if="record.is_company.raw_value === false" t-att-src='_s + "/base/static/src/img/avatar.png"' />
                                                </t>
                                            </t>
                                        </div>
                                        <div class="oe_kanban_details">
                                            <b><field name="name" /></b>
                                            <div t-if="record.function.raw_value">
                                                <field name="function" />
                                            </div>
                                            <div t-if="record.email.raw_value">
                                                <field name="email" />
                                            </div>
                                            <div t-if="record.type.raw_value != 'contact'">
                                                <div>
                                                    <field name="zip" />
                                                    <field name="city" />
                                                </div>
                                                <field t-if="record.state_id.raw_value" name="state_id" />
                                                <field name="country_id" />
                                            </div>
                                            <div t-if="record.phone.raw_value">Phone:
                                                <field name="phone" />
                                            </div>
                                            <div t-if="record.mobile.raw_value">Mobile:
                                                <field name="mobile" />
                                            </div>
                                        </div>
                                    </div>
                                </t>
                            </templates>
                        </kanban>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Inherit filter form -->
    <record id="view_res_partner_affiliate_filter" model="ir.ui.view">
        <field name="name">res.partner.affiliate</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter" />
        <field name="arch" type="xml">
        <field name="name" position="before">
            <field name="display_name" />
            <field name="city" />
         </field>
            <filter name="type_person" position="before">
                <filter string="Registered Offices"
                        name="registered_office"
                        domain="[('type','=','parent_company')]" />
                <filter string="Affiliates"
                        name="affiliates"
                        domain="[('type','=','affiliate')]" />
                <filter string="Contacts"
                        name="contacts"
                        domain="[('type','=','contact')]" />
                <filter string="Others"
                        name="others"
                        domain="[('type','=','other')]" />
                <separator />
            </filter>
        </field>
    </record>


    <!-- Contacts Kanban -->
    <record id="res_partner_kanban_phone_view" model="ir.ui.view" >
        <field name="name">res.partner.kanban</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.res_partner_kanban_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='display_name']/ancestor::strong" position="before">
                <field name="type" widget="badge" 
                    decoration-warning="type == 'affiliate'" 
                    decoration-danger="type == 'parent_company'" 
                    decoration-info="type == 'contact'"
                    decoration-mutes="type == 'other'" />
            </xpath>
            <xpath expr="//div[@class='oe_kanban_global_click o_kanban_record_has_image_fill o_res_partner_kanban'][1]/t[2]/t" position="after">
                <t t-if="record.type.raw_value === 'affiliate'" t-set="placeholder" t-value="kanban_image('res.partner', 'image_128', record.parent_id.raw_value)" />
            </xpath>
        </field>
    </record>
</odoo>
